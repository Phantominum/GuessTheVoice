<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewQuizActivity"
    android:background="@color/black"
    android:padding="20dp"
    >

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            >

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button_img"
            android:scaleType="fitXY"
            android:background="@color/black"

            />


        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="@color/gray"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/view_quiz_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"

                android:src="@drawable/quizimage" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/text_view_quiz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groovy Quiz"
                android:fontFamily="@font/inter_bold"
                android:textSize="35sp"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatImageButton

                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/heart"
                android:scaleType="fitXY"
                android:paddingTop="7.5dp"
                android:paddingStart="75dp"
                android:background="@color/black"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_quiz_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Published by hotemogf"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/gray"
            android:paddingStart="15dp"

            />
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_view_quiz_description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:text="This quiz is for all groovy souls out there who want to test their knowledge in pop music."
                android:fontFamily="@font/inter"
                android:textColor="@color/gray"

                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_play_quiz"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:src="@drawable/play_button"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:paddingStart="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingStart="20dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_view_leaderboards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_button"
                android:textColor="@color/white"
                android:text="View Leaderboards"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:padding="10dp"
                android:textAllCaps="false"

                />
        </LinearLayout>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>