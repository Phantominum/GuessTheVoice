<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewQuizActivity"
    android:background="@color/black"
    android:padding="20dp"
    >

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            >

<!--        <androidx.appcompat.widget.AppCompatImageButton-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/back_button_img"-->
<!--            android:scaleType="fitXY"-->
<!--            android:background="@color/black"-->

<!--            />-->


        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="@color/gray"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/view_quiz_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"

                android:src="@drawable/quizimage" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_quiz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Groovy Quiz"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_like_quiz"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:src="@drawable/heart"


                />
        </RelativeLayout>
        <TextView
            android:id="@+id/text_view_quiz_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Published by hotemogf"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/gray"
            android:paddingStart="15dp"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/text_view_quiz_description"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:text="This quiz is for all groovy souls out there who want to test their knowledge in pop music."
                        android:textColor="@color/gray"

                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/button_play_quiz"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/play_button"
                        android:background="@color/black"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_view_leaderboards"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_corner_button"
                        android:textColor="@color/white"
                        android:text="View Leaderboards"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:padding="8dp"

                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>







    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>