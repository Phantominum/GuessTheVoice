<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameEndActivity"
    android:background="@color/black"
    android:paddingTop="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_settings_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button_img"
            android:scaleType="fitXY"
            android:background="@color/black"

            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Settings"
            android:fontFamily="@font/inter_bold"
            android:textSize="30sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="25dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/green"
                android:fontFamily="@font/inter_semibold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tabbeee"
                android:paddingStart="15sp"
                android:paddingTop="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >
            <LinearLayout
                android:id="@+id/favorite_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite Genres"
                    android:textColor="@color/green"
                    android:fontFamily="@font/inter_semibold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/pastel_blue"
                    android:textAlignment="gravity"
                    android:layout_gravity="right"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="right"
                    android:text="Edit"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pop"
                android:paddingStart="15sp"
                android:paddingTop="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bollywood"
                android:paddingStart="15sp"
                android:paddingTop="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:paddingBottom="20dp"
                />
            <LinearLayout
                android:id="@+id/favorite_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite Song"
                    android:textColor="@color/green"
                    android:fontFamily="@font/inter_semibold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/pastel_blue"
                    android:textAlignment="gravity"
                    android:layout_gravity="right"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="right"
                    android:text="Edit"
                    android:textSize="20sp"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:paddingStart="15sp"
                android:paddingTop="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_log_out"
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/black"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                 />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>